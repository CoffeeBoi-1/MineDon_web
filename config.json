{
    "mainAddress": "https://mine-don.herokuapp.com/",
    "tokenValidDays": 3,
    "maxOptionsAmount": 45,
    "confirmTimeout": 300000,
    "userSchema": {
        "id": {
            "type": "String",
            "required": true 
        },
        "eMail": {
            "type": "String",
            "required": true
        },
        "password": {
            "type": "String",
            "required": true
        },
        "token": {
            "type": "String",
            "required": false
        },
        "tokenValidUntil": {
            "type": "Date",
            "required": false
        },
        "options": {
            "type": "Object",
            "default": {},
            "required": true
        },
        "donattyLink": {
            "type": "String",
            "required": false
        }
    }
}